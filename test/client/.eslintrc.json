{
    "env": {
        "es2020": true,
        "browser": true,
        "node": false,
        "commonjs": true,
        "mocha": true
    },
    "globals": {
        "expect": true,
        "sinon": true,
        "DEBUG": true
    },
    "extends": "../../.eslintrc.json",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [ "warn", 4, {
            "SwitchCase": 1
        } ],
        "linebreak-style": [ "error", "unix" ],
        "quotes": [ "error", "single" ],
        "semi": [ "error", "always" ],
        "no-console": 0
    }
}
